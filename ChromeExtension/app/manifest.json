{
  "name": "Valrus IE Wrapper",
  "short_name": "ValerusIE",
  "version": "2.0",
  "manifest_version": 2,
  "description": "IE11 inside chrome.",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "valerus",
    "default_icon": "icon-128.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": [
    "nativeMessaging",
	"tabs",
	"activeTab"
  ]
}